    },
    "keywords": [
        "unity",
        "screen-capture",
        "desktop-capture",
        "native-plugin"
    ],
    "samples": [
        {
            "displayName": "01. Basic",
            "description": "Basic collection of samples for uDesktopDuplication.",
            "path": "Samples~/01. Basic"
        },
        {
            "displayName": "02. Loupe",
            "description": "Sample of enlarging a part of the screen.",
